@model Projet_gestionStagiaire.Models.Candidat

<div class="container">
    <h2>Confirmation de Stage</h2>
    <form asp-action="ConfirmerStagiare" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label>Nom</label>
            <input type="text" class="form-control" value="@Model.Nom" readonly />
        </div>
        <div class="form-group">
            <label>Prénom</label>
            <input type="text" class="form-control" value="@Model.Prenom" readonly />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" value="@Model.Email" readonly />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" value="@Model.Telephone" readonly />
        </div>
        <div class="form-group">
            <label>Ville</label>
            <input type="text" class="form-control" value="@Model.Ville" readonly />
        </div>
        <div class="form-group">
            <label>Annee Universitaire</label>
            @if (Model.AnneeUniversitaire == 1)
            {
                <input type="text" class="form-control" value="Première Année" readonly />
            }
            else if (Model.AnneeUniversitaire == 2)
            {
                <input type="text" class="form-control" value="Deuxième Année" readonly />
            }
            else if (Model.AnneeUniversitaire == 3)
            {
                <input type="text" class="form-control" value="Troisième Année" readonly />
            }
            else if (Model.AnneeUniversitaire == 4)
            {
                <input type="text" class="form-control" value="Quatrième Année" readonly />
            }
            else if (Model.AnneeUniversitaire == 5)
            {
                <input type="text" class="form-control" value="Cinquième Année" readonly />
            }
        </div>
        <div class="form-group">
            <label>Domaine</label>
            <input type="text" class="form-control" value="@Model.Telephone" readonly />
        </div>
        <div class="form-group">
            <label>Universite</label>
            <input type="text" class="form-control" value="@Model.Universite" readonly />
        </div>
        <div class="form-group">
            <label>Date de Début</label>
            <input type="date" name="DateDebut" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Durée du Stage</label>
            <select name="DureDeStage" class="form-control" required>
                <option value="">Sélectionnez la durée</option>
                <option value="1">1 mois</option>
                <option value="2">2 mois</option>
                <option value="3">3 mois</option>
                <option value="4">4 mois</option>
                <option value="6">6 mois</option>
            </select>
        </div>
        <div class="form-group">
            <label>Encadrant</label>
            <select name="EncadrantId" class="form-control" required>
                <option value="">Sélectionner un encadrant</option>
                @foreach (var encadrant in (IEnumerable<SelectListItem>)ViewBag.Encadrants)
                {
                    <option value="@encadrant.Value">@encadrant.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Accepter Stagiaire</button>
    </form>
</div>
