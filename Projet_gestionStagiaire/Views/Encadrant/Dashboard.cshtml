@model Projet_gestionStagiaire.Models.Encadrant
@{
    ViewData["Nom"] = ViewBag.EncadrantNom;
}
<div class="container-fluid">
    <div class="row clearfix row-deck">
        <div class="col-6 col-md-4 col-xl-2">
            <div class="card">
                <div class="card-body ribbon">
                    <div class="ribbon-box pink" data-toggle="tooltip" title="">@ViewBag.NumberOfUnreadMessages</div>
                    <a href="@Url.Action("Inbox", "Encadrant")" class="my_sort_cut text-muted">
                        <i class="fe fe-inbox"></i>
                        <span>Inbox</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <div class="card">
                <div class="card-body ribbon">
                    <div class="ribbon-box orange" data-toggle="tooltip" title="">@ViewBag.NumberOfSujetStagiare</div>
                    <a href="@Url.Action("SujetdeStage", "Encadrant")" class="my_sort_cut text-muted">
                        <i class="fa fa-address-book"></i>
                        <span>Sujet De Stage</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <div class="card">
                <div class="card-body ribbon">
                    <div class="ribbon-box orange" data-toggle="tooltip" title="">@ViewBag.NumberOfStagiaires</div>
                    <a href="@Url.Action("Stagiaires", "Encadrant")" class="my_sort_cut text-muted">
                        <i class="fa fa-users"></i>
                        <span>Stagiaires</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
