@{
    Layout = null;
}
<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="~/EPG.ico" type="image/x-icon" />

    <title>:: Encadrant :: Login</title>

    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.min.css" />
</head>
<body class="font-muli dark-mode gradient">

    <div class="auth option2">
        <div class="auth_left">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <a class="header-brand" href="">
                            <img src="~/assets/images/xs/EPG.jpg" alt="Logo" class="brand-logo" style="width: 50px; height: 50px;">
                        </a>
                        <div class="card-title mt-3">Encadrant</div>

                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <form asp-action="Login" asp-controller="Encadrant" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" name="username" placeholder="Enter Username" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" placeholder="Password" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/assets/js/core.js"></script>

</body>
</html>