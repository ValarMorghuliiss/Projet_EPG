@model Projet_gestionStagiaire.Models.Tache
@{
    ViewData["Nom"] = ViewBag.EncadrantNom;
}

<h2>Add Task</h2>

<p><strong>Stagiaire ID:</strong> @ViewBag.StagiaireId</p>
<p><strong>Sujet de Stage ID:</strong> @ViewBag.SujetDeStageId</p>

<form asp-action="AjouterTache" method="post">

        <input type="hidden" name="StagiaireId" value="@ViewBag.StagiaireId" />
        <input type="hidden" name="SujetDeStageId" value="@ViewBag.SujetDeStageId" />

    <!-- Validation Summary -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Titre" class="control-label"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateDebut" class="control-label"></label>
        <input asp-for="DateDebut" class="form-control" type="date" />
        <span asp-validation-for="DateDebut" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateFin" class="control-label"></label>
        <input asp-for="DateFin" class="form-control" type="date" />
        <span asp-validation-for="DateFin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Task</button>
    </div>

    <a href="@Url.Action("Taches", new { stagiaireId = ViewBag.StagiaireId, sujetDeStageId = ViewBag.SujetDeStageId })" class="btn btn-secondary">
        Back to Tasks
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}