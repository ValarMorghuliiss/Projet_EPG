<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <title>:: Encadrant :: Home</title>
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/summernote/dist/summernote.css" />
    <link rel="stylesheet" href="~/assets/plugins/nestable/jquery-nestable.css" />
    <link rel="stylesheet" href="~/assets/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.min.css" />

</head>

<body class="font-muli dark-mode gradient">
    <div id="main_content">
       
        <!-- Menu Left -->
        <div id="header_top" class="header_top">
            <div class="container">
                <div class="hleft">
                    <a class="header-brand" href=""> <i class="fa fa-graduation-cap brand-logo"></i>
                    </a>
                    <div class="dropdown">
                        <a href="javascript:void(0)" class="nav-link icon menu_toggle">
                            <i class="fe fe-align-center"></i>
                        </a>
                        <a href="@Url.Action("Inbox", "Encadrant")" class="nav-link icon app_inbox active">
                            <i class="fe fe-inbox" data-toggle="tooltip" data-placement="right" title="Inbox"></i>
                        </a>
                    </div>
                </div>
                <div class="hright">
                    <a href="@Url.Action("Logout", "Encadrant")" class="nav-link icon settingbar">
                        <i class="fe fe-power"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Menu-->
        <div id="left-sidebar" class="sidebar">
            <h5 class="brand-name">@ViewData["Nom"]</h5>
            <ul class="nav nav-tabs">
            </ul>
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="menu-uni" role="tabpanel">
                    <nav class="sidebar-nav">
                        <ul class="metismenu">
                            <li class="active">
                                <a href="@Url.Action("Dashboard", "Encadrant")"><i class="fa fa-dashboard"></i><span>Dashboard</span></a>
                                <a href="@Url.Action("Stagiaires", "Encadrant")"><i class="fa fa-users"></i><span>Stagiaires</span></a>
                                <a href="@Url.Action("SujetdeStage", "Encadrant")"><i class="fa fa-graduation-cap"></i><span>Sujet De Stage</span></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>


        <!-- Start Page header -->
        <div class="page">

            <!-- Profil Setting -->
            <div class="section-body" id="page_top">
                <div class="container-fluid">
                    <div class="page-header">
                        <div class="left"></div>
                        <div class="right">
                            <div class="notification d-flex">
                                <div class="dropdown d-flex">
                                    <a href="javascript:void(0)" class="chip ml-3" data-toggle="dropdown">
                                        <span class="avatar" style="background-image: url(../assets/images/xs/avatar5.jpg);"></span>
                                        @ViewData["Nom"]
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                        <a class="dropdown-item" href=""><i class="dropdown-icon fe fe-user"></i> Profile</a>
                                        <a class="dropdown-item" href="">
                                            <i class="dropdown-icon fe fe-settings"></i>
                                            Settings
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Encadrant")"><i class="dropdown-icon fe fe-log-out"></i> Sign out</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Start Page Contenu -->
            <div class="section-body mt-4">
                @RenderBody()
            </div>
           
            <!-- Start main footer -->
            <div class="section-body">
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">Copyright © 2024
                                <a>MohammedMouhcine</a>.
                            </div>
                            <div class="col-md-6 col-sm-12 text-md-right">
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
       
        
        </div>
    </div>

    <script src="~/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/assets/bundles/counterup.bundle.js"></script>
    <script src="~/assets/bundles/apexcharts.bundle.js"></script>
    <script src="~/assets/bundles/summernote.bundle.js"></script>
    <script src="~/assets/js/core.js"></script>
    <script src="~/Ass/js/page/index.js"></script>
    <script src="~/Ass/js/page/summernote.js"></script>
    <script src="~/Ass/js/page/sortable-nestable.js"></script>
    <script src="~/Ass/js/chart/knobjs.js"></script>
    <script src="~/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/bundles/knobjs.bundle.js"></script>
    <script src="~/assets/bundles/nestable.bundle.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>